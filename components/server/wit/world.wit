package wasmcp:server@0.1.0;

/// World for the MCP server component that bridges HTTP to MCP protocol
/// This world imports the handler interface that user implementations must export
world mcp-server {
    /// Import the core MCP handler interface
    /// This will be satisfied by user-provided handler components
    import mcp:protocol/handler@0.1.0;
    
    /// Import notification capabilities for the server to use
    import mcp:protocol/notifications@0.1.0;
}