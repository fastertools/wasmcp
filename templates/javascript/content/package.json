{
  "name": "{{project-name | kebab_case}}",
  "version": "0.1.0",
  "type": "module",
  "description": "{{project-description}}",
  "scripts": {
    "bundle": "esbuild index.js --bundle --format=esm --platform=neutral --outfile=bundled.js",
    "build": "npm run bundle && jco componentize bundled.js --wit wit --world-name {{project-name}} --out {{project-name}}_provider.wasm",
    "build:types": "npm run jco types wit -o types",
    "clean": "rm -rf {{project-name}}_provider.wasm mcp-http-server.wasm .transport-tmp.wasm dist types bundled.js"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.8.0",
    "esbuild": "^0.25.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}