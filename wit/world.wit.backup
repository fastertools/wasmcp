package fastertools:mcp@0.1.1;

/// World for MCP implementations that only provide tools
world mcp-tools {
    // No imports - handlers are pure providers
    export core;
    export tool-handler;
}

/// World for MCP implementations that only provide resources
world mcp-resources {
    // No imports - handlers are pure providers
    export core;
    export resource-handler;
}

/// World for MCP implementations that only provide prompts
world mcp-prompts {
    // No imports - handlers are pure providers
    export core;
    export prompt-handler;
}

/// World for MCP implementations that provide tools and resources
world mcp-tools-resources {
    // No imports - handlers are pure providers
    export core;
    export tool-handler;
    export resource-handler;
}

/// World for full MCP handler implementations
world mcp-full {
    // No imports - handlers are pure providers
    export core;
    export tool-handler;
    export resource-handler;
    export prompt-handler;
}