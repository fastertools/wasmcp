package wasmcp:mcp@0.1.0;

/// World that MCP handler implementations must export
/// This defines the contract between the server component and handler implementations
world mcp-handler {
    /// Import all the type definitions
    import mcp:protocol/types@0.1.0;
    import mcp:protocol/session@0.1.0;
    import mcp:protocol/tools@0.1.0;
    import mcp:protocol/resources@0.1.0;
    import mcp:protocol/prompts@0.1.0;
    import mcp:protocol/notifications@0.1.0;
    
    /// Export the handler implementation
    export mcp:protocol/handler@0.1.0;
}