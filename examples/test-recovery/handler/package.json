{
  "name": "test-recovery-handler",
  "version": "0.1.0",
  "type": "module",
  "description": "An MCP tool written in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:types && npm run build:js && npm run build:bundle && npm run build:component",
    "build:types": "jco types ./wit -o dist/generated",
    "build:js": "tsc",
    "build:bundle": "esbuild dist/index.js --bundle --format=esm --platform=node --outfile=dist/bundled.js",
    "build:component": "jco componentize dist/bundled.js --wit ./wit --world-name mcp-handler --out dist/handler.wasm",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "wasmcp": "^0.1.10"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.8.1",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}