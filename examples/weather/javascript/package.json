{
  "name": "weather-mcp-handler",
  "version": "0.1.0",
  "type": "module",
  "description": "JavaScript MCP weather handler example",
  "scripts": {
    "bundle": "esbuild index.js --bundle --format=esm --platform=neutral --outfile=bundled.js",
    "build": "npm run bundle && jco componentize bundled.js --wit wit --world-name tools-handler --out weather-handler.wasm",
    "build:types": "jco types wit -o types",
    "compose": "wac plug --plug weather-handler.wasm ../../../components/server/target/wasm32-wasip1/release/wasmcp_server.wasm -o composed.wasm",
    "transpile": "jco transpile weather-handler.wasm -o dist",
    "clean": "rm -rf weather-handler.wasm composed.wasm dist types bundled.js"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.8.0",
    "esbuild": "^0.25.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
